<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="br.edu.unis.oo.negocio">
    <class name="Pessoa" table="tblPessoa">
        <id name="nis" type="String" column="nis"/>
        <property name="nome" type="String" column="nome"/>
        <property name="dataNascimento" type="java.util.Date" column="dataNascimento"/>
        <property name="sexo" type="String" column="sexo"/>
        <property name="dataCadastro" type="java.util.Date" column="dataCadastro"/>
        <property name="status" type="String" column="status"/>
        <property name="cpf" type="String" column="cpf"/>
        <property name="rg" type="String" column="rg"/>
        <property name="certidaoNascimento" type="String" column="certidaoNascimento"/>
        <property name="capaz" type="int" column="id"/>
    </class>
</hibernate-mapping>