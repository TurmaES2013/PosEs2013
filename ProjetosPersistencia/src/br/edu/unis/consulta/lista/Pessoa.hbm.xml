<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="br.edu.unis.consulta.lista">

    <class name="Pessoa" table="tblPessoa">

        <id name="cpf" type="java.lang.String" column="cpf"/>

        <property name="nome" type="java.lang.String" column="nome"/>
        <property name="rg" type="java.lang.String" column="rg"/>
        <property name="endereco" type="java.lang.String" column="endereco"/>
        <property name="cidade" type="java.lang.String" column="cidade"/>

    </class>

</hibernate-mapping>
